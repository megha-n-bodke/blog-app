<h1>Here is a list of posts for a given user</h1>
<hr>

 <div class = "row ml-3 bg-secondary border border-dark mb-4 ">
    <div class = "col-md-3">
     <img src = "<%= @user.photo %>" class = "ml-3 w-50" alt="profile">
    </div>

    <div class = "col-md-1"></div>

    <div class = "col-md-8 pl-3 border border-2 border-dark">
     <p><%= @user.name %> &nbsp Number of posts:<%=@user.posts_counter%></p>
    </div>
    </div>
    </div>

    <div class = "row">
    <div class = "row border border-2 border-dark mb-2">
    <% @posts.each do |post| %>
    <%= link_to user_post_path(id: post.id), class:'nav-link' do%>
    <p>
    Post Id#:<%=post.id%><br>
    Post Text: <%=post.text%>
    <%=post.comments_counter%>
    <%=post.likes_counter%>
    </p>
    <% end %>
    </div>
    </div>
    
    <div class = "row border border-2 border-success mb-2">
    <% post.recent_comment.each do |comment| %>
              <p class="card-text"><%= comment.author.name %>: <%= comment.text %></p>
            <% end %>
            <%end%>
    
    </div>
    </div>
    



